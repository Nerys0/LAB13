    <scrip>
        //funciones matematicas
        funtion sumar(a,b){
            retur a+b;

        }
        funtion restar(a,b){
            retur a-b;
        }
        funtion multi(a,b){
            retur a*b;
        }
        funtion divi(a,b){
            retur a/b;
        }
        // funtion calculadora
        funtion calculadora(n1,n2 operacion){
            switch(operacion){
                case 'sumar';
                retur sumar(n1,n2);
                case 'restar';
                retur restar(n1,n2);
                case 'multi';
                retur multi(n1,n2);
                case 'divi';
                retur divi(n1,n2);
                default:
                retur"operacion no valida"...;
            }
        } 
        let numero1=parseFloat (prompt("ingrese el primer numero:"));
        let numero2=parseFloat (prompt ("ingrese el segundo numero"));
        let operacion=prompt (ingrese la opcion (sumar,restar,multi,divi)")
        let resultado=calculadora (numero1,numero2,operacion);
        Console.log ("El resultado es: "+resultado);
        document.write ("el resultado es: "+resultado)         

                

    </scrip>
